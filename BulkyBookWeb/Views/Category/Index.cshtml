@model IEnumerable<BulkyBookWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CATEGORY LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn"><i class="bi bi-plus-lg"></i></a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td width="50%">
                @category.Name
            </td>
            <td width="30%">
                @category.DisplayOrder
            </td>
        </tr>
    }
    </tbody>
</table>